@model TT_Shop.Models.User

@{
    ViewBag.Title = "Xóa Người Dùng";
    Layout = "~/Views/Shared/PopUp.cshtml";
}

<h2 class="text-center mb-4">Xóa Người Dùng</h2>

<div class="container">
    <h3 class="text-center">Bạn có chắc chắn muốn xóa người dùng này không?</h3>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Thông tin người dùng</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tên người dùng:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.fullname)</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.email)</dd>

                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.created_at)</dd>

                <dt class="col-sm-3">Ngày cập nhật:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.updated_at)</dd>
            </dl>
        </div>
    </div>

    <!-- Hành động xóa -->
    <div class="text-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <button type="submit" class="btn btn-danger">Xóa người dùng</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        }
    </div>
</div>
