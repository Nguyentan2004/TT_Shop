@model IEnumerable<TT_Shop.Models.Product>

@{
    ViewBag.Title = "Kết quả tìm kiếm";
}

<h2>Kết quả tìm kiếm</h2>

@if (!Model.Any())
{
    <p>Không tìm thấy sản phẩm nào phù hợp với tiêu chí tìm kiếm của bạn.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Hình ảnh</th>
                <th>Tên</th>
                <th>Miêu tả</th>
                <th>Giá</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content("~/Images/Images/" + product.image_url)" alt="Hình ảnh sản phẩm" style="max-width: 100px; max-height: 100px;" />
                    </td>
                    <td>@product.name</td>
                    <td>@product.description</td>
                    <td>@String.Format("{0:C}", product.price)</td>
                    <td>
                        <a href="@Url.Action("Detail", "Home", new { id = product.product_id })" class="btn btn-success">Mua ngay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
