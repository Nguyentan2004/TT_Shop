<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Thêm Bootstrap -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.0/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="icon" href="~/images/z6070122817451_87cdede07bf9194d02212570930d82e0.jpg" />
    <title>Linh kiện tối cổ</title>

    @RenderSection("styles", required: false)

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Thanh điều hướng -->
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="container">
            <div style="align-items: center">
                @Html.ActionLink("Điện tử tối cổ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <!-- Other nav items can go here if needed -->
                </ul>

                <ul class="navbar-nav ml-auto">
                    <p></p>


                    <li class="nav-item" style="width: 400px">
                        <form class="d-flex" method="get" action="@Url.Action("Search", "Products")">
                            <input class="form-control me-2" type="search" name="query" placeholder="Nhập sản phẩm" aria-label="Search" />
                            <button class="btn btn-outline-success" type="submit"><i class="fas fa-search"></i>Tìm kiếm</button>
                        </form>
                    </li>
                    <li></li>

                    <li class="nav-item" style="margin-left:20px; margin-right:20px">
                        <a href="@Url.Action("Index", "Cart")" style="color: black; text-decoration: none">
                            <i class="fas fa-cart-plus fa-3x text-center"></i>
                        </a>
                        <a href="@Url.Action("Index", "Cart")" style="color: black; font-size: 40px; text-decoration: none " class="text-center "> <span id="cartItemCount">@((Session["Cart"] as List<TT_Shop.Models.CartItem>)?.Count ?? 0)</span></a>
                    </li>


                    @if (Session["User"] != null)
                    {
                        TT_Shop.Models.User user = Session["User"] as TT_Shop.Models.User;
                        <li class="nav-item dropdown ">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Xin chào, @user.username <!-- Assuming user has a Name property -->
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("Details", "User")">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "User")">Đăng xuất</a></li>
                                @if (user.role == "admin")
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Admin")">Quản lý web</a></li>
                                }
                            </ul>
                        </li>
                    }

                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Đăng nhập", "Login", "User", null, new { @class = "nav-link text-white" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Đăng ký", "Register", "User", null, new { @class = "nav-link text-white" })
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <!-- Nội dung chính -->
    <div class="container-fluid p-0">
        <div class="row no-gutters">

            <div class="col-md-12 ">
                @RenderBody()
            </div>

        </div>

        <hr />
        <footer class="mt-auto">
            <div class="container">
                <hr />
                <p>&copy; @DateTime.Now.Year - CTy TNHH nhiều thành viên Động Tối Cổ</p>

            </div>
        </footer>
    </div>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
