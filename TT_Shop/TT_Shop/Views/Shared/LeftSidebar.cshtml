@{
    var categories = ViewBag.Categories as List<TT_Shop.Models.Category>;
}

<div class="left-sidebar custom-sidebar p-3" style="height: 100vh; border: 1px solid #ccc; background-color: #f8f9fa; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);">
    <h4 class="mb-3 text-center">Phân loại sản phẩm</h4>
    <ul class="list-group">
        @if (categories != null && categories.Any())
        {
            foreach (var category in categories)
            {
                if (!string.IsNullOrEmpty(category.name))
                {
                    <li class="list-group-item border-0 p-2">
                        <a href="@Url.Action("Category", "Home", new { id = category.category_id })" class="text-dark sidebar-link d-flex align-items-center">
                            <!-- Biểu tượng FontAwesome cho danh mục -->
                            <i class="fa fa-tags me-2"> </i>@category.name
                        </a>
                    </li>
                }
            }
        }
        else
        {
            <li class="list-group-item border-0 p-2 text-muted text-center">
                <i class="fa fa-exclamation-circle"></i> Không có danh mục nào
            </li>
        }
    </ul>
</div>

<!-- Thêm CSS để làm đẹp -->
<style>
    .sidebar-link {
        font-size: 16px;
        text-decoration: none;
        color: #333;
        transition: all 0.3s ease;
    }

        .sidebar-link:hover {
            color: #007bff; /* Màu khi hover */
            text-decoration: underline;
        }

        .sidebar-link i {
            font-size: 18px; /* Biểu tượng nhỏ hơn một chút */
        }
</style>

