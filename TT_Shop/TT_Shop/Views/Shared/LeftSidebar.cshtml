@{
    var categories = ViewBag.Categories as List<TT_Shop.Models.Category>;
}

<div class="left-sidebar custom-sidebar p-3" style="height: 100vh; border: 1px solid #ccc; background-color: #f8f9fa; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <h4 class="mb-3 text-center">Phân loại sản phẩm</h4>
    <ul class="list-group">
        @if (categories != null && categories.Any())
        {
            foreach (var category in categories)
            {
                if (!string.IsNullOrEmpty(category.name))
                {
                    <li class="list-group-item border-0 p-2">
                        <a href="javascript:void(0);" onclick="loadProducts(@category.category_id)" class="text-decoration-none text-dark sidebar-link">
                            @category.name
                        </a>
                    </li>
                }
            }
        }
        else
        {
            <li class="list-group-item border-0 p-2 text-muted">
                Không có danh mục nào
            </li>
        }
    </ul>
</div>
