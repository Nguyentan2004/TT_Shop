@model IEnumerable<TT_Shop.Models.CartItem>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Giỏ hàng</h2>

<table>
    <tr>
        <th>Sản phẩm</th>
        <th>Giá</th>
        <th>Số lượng</th>
        <th>Tổng</th>
        <th>Hành động</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TenSanPham</td>
            <td>@item.Gia</td>
            <td>
                <input type="number" value="@item.SoLuong" onchange="updateQuantity(@item.IdSanPham, this.value)" />
            </td>
            <td>@(item.Gia * item.SoLuong)</td>
            <td>
                <button onclick="removeFromCart(@item.IdSanPham)">Xóa</button>
            </td>
        </tr>
    }
</table>
