@model IEnumerable<TT_Shop.Models.CartItem>

@{
    ViewBag.Title = "Giỏ hàng";
}

<h2>Giỏ hàng của bạn</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Hình ảnh</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Tổng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" alt="@item.TenSanPham" style="width: 50px; height: 50px;" />
                </td>
                <td>@item.TenSanPham</td>
                <td>@item.Gia</td>
                <td>@item.SoLuong</td>
                <td>@(item.Gia * item.SoLuong)</td>
                <td>
                    <a href="@Url.Action("Remove", "Cart", new { id = item.IdSanPham })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-right">
    <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success">Thanh toán</a>
</div>
