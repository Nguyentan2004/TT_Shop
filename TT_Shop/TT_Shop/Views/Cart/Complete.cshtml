@{
    ViewBag.Title = "Complete";
    Layout = "~/Views/Shared/_LayoutNoFooter.cshtml";
}

<div class="container-fluid p-4">
    <div class="card">
        <div class="card-header bg-warning text-white">
            <h4>Xác nhận thanh toán</h4>
        </div>
        <div class="card-body text-center">
            <div class="my-4">
                <img src="~/images/QRThanhToan.png" alt="QR Thanh Toán" class="img-fluid" style="max-width: 200px;" />
            </div>
            <div class="mt-4">
                <form method="post" action="@Url.Action("Complete", "Cart")">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success btn-lg">Đã thanh toán</button>
                </form>
            </div>
        </div>
    </div>
</div>
