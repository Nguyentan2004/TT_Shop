        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.updated_at)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.updated_at)
        </dd>
    </dl>
</div>

<h4>Order Items</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order_Details.First().Product.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order_Details.First().quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order_Details.First().price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order_Details)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
            </tr>
        }
    </tbody>
</table>

