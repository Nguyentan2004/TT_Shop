@model TT_Shop.Models.Order

@{
    ViewBag.Title = "Hủy Đơn Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center text-danger">Hủy Đơn Hàng</h2>

            <h3 class="text-center text-warning">Bạn có chắc chắn muốn hủy đơn hàng này?</h3>
            <hr />

            <!-- Thông tin đơn hàng -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Thông Tin Đơn Hàng</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.order_status)</dd>

                        <dt class="col-sm-4">Tổng tiền:</dt>
                        <dd class="col-sm-8">@String.Format("{0:0,0}đ", Model.total_amount)</dd>

                        <dt class="col-sm-4">Địa chỉ giao hàng:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.shipping_address)</dd>

                        <dt class="col-sm-4">Ngày đặt:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.order_date)</dd>

                        <dt class="col-sm-4">Ngày cập nhật:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.updated_at)</dd>

                        <dt class="col-sm-4">Khách hàng:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.fullname)</dd>
                    </dl>
                </div>
            </div>

            <!-- Form hủy -->
            @using (Html.BeginForm("CancelOrder", "Orders", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.order_id)

                <div class="form-actions text-center">
                    <input type="submit" value="Hủy Đơn Hàng" class="btn btn-danger" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            }
        </div>
    </div>
</main>
