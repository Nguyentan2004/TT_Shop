@model IEnumerable<TT_Shop.Model.Product>

@{
    ViewBag.Title = "Trang chủ";
    int productCount = 0;
}

<main>
    <!-- Phần banner khuyến mãi -->
    <section class="promo-banner text-center p-4 mb-4" style="background-color: #e0e0e0;">
        <h1>Khuyến mãi hấp dẫn</h1>
        <p class="lead">Phụ kiện iPhone 16 Series chỉ từ 190.000đ</p>
        <a href="#" class="btn btn-primary btn-md">Xem chi tiết &raquo;</a>
    </section>

    <!-- Phần danh sách sản phẩm -->
    <section class="container">
        <h2>Sản phẩm mới nhất</h2>

        @foreach (var product in Model)
        {
            if (productCount % 3 == 0)
            {
                if (productCount > 0)
                {
                   
                }
               
                }

                <div class="col-md-4 text-center">
                    <img src="@Url.Content(product.image_url)" alt="@product.name" class="img-fluid mb-2" />
                    <h5>@product.name</h5>
                    <p>Giá: @String.Format("{0:0,0}đ", product.price)</p>
                    <p>@product.description</p>
                    <a href="@Url.Action("Detail", "Home", new { id = product.product_id })" class="btn btn-success">Mua ngay</a>
                </div>

                productCount++;
            }

</section>
</main>
