@model TT_Shop.Models.HomeViewModel

<h2>@ViewBag.CategoryName</h2>

<div>
    @foreach (var product in Model.Products)
    {
        <div>
            <h3>@product.name</h3>
            <p>@product.description</p>
            <p>Price: @product.price</p>
        </div>
    }
</div>

<div>
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="@Url.Action("Category", new { id = ViewBag.CategoryId, page = ViewBag.CurrentPage - 1 })">Previous</a>
    }

    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a href="@Url.Action("Category", new { id = ViewBag.CategoryId, page = i })">@i</a>
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Category", new { id = ViewBag.CategoryId, page = ViewBag.CurrentPage + 1 })">Next</a>
    }
</div>
