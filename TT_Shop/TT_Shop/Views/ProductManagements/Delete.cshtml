@model TT_Shop.Models.Product

@{
    ViewBag.Title = "Xóa Sản Phẩm";
    Layout = "~/Views/Shared/PopUp.cshtml";
}

<h2 class="text-center mb-4">Xóa Sản Phẩm</h2>

<div class="container">
    <h3 class="text-center">Bạn có chắc chắn muốn xóa sản phẩm này không?</h3>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Thông tin sản phẩm</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tên sản phẩm:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.name)</dd>

                <dt class="col-sm-3">Mô tả:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.description)</dd>

                <dt class="col-sm-3">Giá:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.price)</dd>

                <dt class="col-sm-3">Số lượng tồn kho:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.stock)</dd>

                <dt class="col-sm-3">Hình ảnh:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.image_url)</dd>

                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.created_at)</dd>

                <dt class="col-sm-3">Ngày cập nhật:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.updated_at)</dd>

                <dt class="col-sm-3">Danh mục:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.name)</dd>
            </dl>
        </div>
    </div>

    <!-- Hành động xóa -->
    <div class="text-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <button type="submit" class="btn btn-danger">Xóa sản phẩm</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        }
    </div>
</div>
