@model IEnumerable<TT_Shop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary" data-toggle="modal" data-target="#modalWindow" data-title="Create New Product">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>Image</th>
            <th>
                @Html.DisplayNameFor(model => model.created_at)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.updated_at)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stock)
                </td>
                <td>
                    <img src="@item.image_url" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.created_at)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.updated_at)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.name)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Edit", new { id = item.product_id })" class="btn btn-warning btn-sm me-2" data-toggle="modal" data-target="#modalWindow" data-title="Edit Product">Edit</a>
                        <a href="@Url.Action("Delete", new { id = item.product_id })" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modalWindow" data-title="Delete Product">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Structure -->
<div class="modal fade" id="modalWindow" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel"></h5>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('a[data-toggle="modal"]').on('click', function (e) {
                e.preventDefault();
                var url = $(this).attr('href');
                var title = $(this).data('title');
                $('#modalLabel').text(title);
                $('#modalWindow .modal-body').load(url);
                $('#modalWindow').modal('show');
            });
        });
    </script>
}