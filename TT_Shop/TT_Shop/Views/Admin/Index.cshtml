@{
    ViewBag.Title = "Bảng điều khiển quản trị";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<p></p>
<p></p>
<h1 class="text-primary text-center mb-4">Bảng điều khiển quản trị</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-3 text-center mb-4 d-flex align-items-stretch">
            <button class="btn btn-primary btn-lg btn-block shadow w-100" onclick="location.href='@Url.Action("Index", "AccoutManagement")'">
                <i class="fas fa-users fa-2x mb-2"></i>
                <br />Quản lý khách hàng
            </button>
        </div>

        <div class="col-md-3 text-center mb-4 d-flex align-items-stretch">
            <button class="btn btn-secondary btn-lg btn-block shadow w-100" onclick="location.href='@Url.Action("Index", "ProductManagements")'">
                <i class="fas fa-box fa-2x mb-2"></i>
                <br />Quản lý sản phẩm
            </button>
        </div>

        <div class="col-md-3 text-center mb-4 d-flex align-items-stretch">
            <button class="btn btn-success btn-lg btn-block shadow w-100" onclick="location.href='@Url.Action("Index", "Orders")'">
                <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                <br />Quản lý đơn hàng
            </button>
        </div>

        <div class="col-md-3 text-center mb-4 d-flex align-items-stretch">
            <button class="btn btn-info btn-lg btn-block shadow w-100" onclick="location.href='@Url.Action("ReportsView", "Report")'">
                <i class="fas fa-chart-bar fa-2x mb-2"></i>
                <br />Báo cáo
            </button>
        </div>
    </div>
</div>

@Styles.Render("~/Content/font-awesome")
