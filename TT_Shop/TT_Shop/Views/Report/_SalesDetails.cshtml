@model TT_Shop.Models.OrdersReportViewModel

@if (Model.SalesDetails != null && Model.SalesDetails.Any())
{
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Tên sản phẩm</th>
                <th class="text-center">Số lượng đã bán</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.SalesDetails)
            {
                <tr>
                    <td>@detail.ProductName</td>
                    <td class="text-center">@detail.QuantitySold</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-muted">Không có chi tiết bán hàng nào trong tháng này.</p>
}
